generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Tenant {
    id        String    @id @default(uuid())
    slug      String    @unique
    name      String
    type      String    @default("K12") // College
    config    Json      @default("{}")
    users     User[]
    students  Student[]
    createdAt DateTime  @default(now())
}

enum TenantType {
    K12 // Ensino Geral/Médio
    UNIVERSITY // Ensino Superior
    KINDERGARTEN //Creche
}

enum TenantStatus {
    ACTIVE
    SUPENDED // Falta de pagamento
    ARCHIVED
}

model User {
    id          String @id @default(uuid())
    email       String @unique
    passwordHas String
    role        String @default("OPERATOR")
    tenantId    String
    tenant      Tenant @relation(fields: [tenantId], references: [id])
}

model Student {
    id       String  @id @default(uuid())
    name     String
    email    String?
    status   String  @default("ACTIVE")
    tenantId String
    tenant   Tenant  @relation(fields: [tenantId], references: [id])
}

enum Role {
  SUPER_ADMIN  // Você (Gere a plataforma)
  ADMIN        // Diretor da Escola
  FINANCIAL    // Tesouraria
  SECRETARY    // Secretaria Académica
  TEACHER      // Professor
  STUDENT      // Acesso ao Portal
  GUARDIAN     // Encarregado
}
